@model IEnumerable<GarageMVC.Models.Vehicles.IVehicle>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Add Vehicle</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <a asp-action="Index" asp-route-sortColumn="RegistrationNumber" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "RegistrationNumber_asc" ? "desc" : "asc")">
                    @Html.DisplayNameFor(model => model.RegistrationNumber)
                    @(ViewData["CurrentSort"]?.ToString() == "RegistrationNumber_asc" ? "▼" : "▲")
                </a>
                <form asp-action="Index">
                    <input type="text" name="searchTerm" placeholder="Filter by Registration" class="form-control filter-input" />
                </form>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortColumn="VehicleType" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "VehicleType_asc" ? "desc" : "asc")">
                    @Html.DisplayNameFor(model => model.VehicleType)
                    @(ViewData["CurrentSort"]?.ToString() == "VehicleType_asc" ? "▼" : "▲")
                </a>
                <form asp-action="Index">

                    <input type="text" name="searchTerm" placeholder="Filter by Type" class="form-control filter-input" />
                </form>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortColumn="Color" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "Color_asc" ? "desc" : "asc")">
                    @Html.DisplayNameFor(model => model.Color)
                    @(ViewData["CurrentSort"]?.ToString() == "Color_asc" ? "▼" : "▲")
                </a>
                <form asp-action="Index">

                    <input type="text" name="searchTerm" placeholder="Filter by Color" class="form-control filter-input" />
                </form>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortColumn="FuelType" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "FuelType_asc" ? "desc" : "asc")">
                    @Html.DisplayNameFor(model => model.FuelType)
                    @(ViewData["CurrentSort"]?.ToString() == "FuelType_asc" ? "▼" : "▲")
                </a>
                <form asp-action="Index">

                    <input type="text" name="searchTerm" placeholder="Filter by FuelType" class="form-control filter-input" />
                </form>
            </th>
            <th>
                <a asp-action="Index" asp-route-sortColumn="NumberOfWheels" asp-route-sortOrder="@(ViewData["CurrentSort"]?.ToString() == "NumberOfWheels_asc" ? "desc" : "asc")">
                    @Html.DisplayNameFor(model => model.NumberOfWheels)
                    @(ViewData["CurrentSort"]?.ToString() == "NumberOfWheels_asc" ? "▼" : "▲")
                </a>
                <form asp-action="Index">

                    <input type="text" name="searchTerm" placeholder="Filter by Wheels" class="form-control filter-input" />
                </form>
            </th>
        </tr>
    </thead>


    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.RegistrationNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.VehicleType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Color)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.FuelType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NumberOfWheels)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>
        document.querySelectorAll('.filter-input').forEach(input => {
            input.addEventListener('keydown', function (event) {
                if (event.key === 'Enter') {
                    event.preventDefault();
                    this.form.submit();
                }
            });
        });
    </script>
}